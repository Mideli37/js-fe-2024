{
  "name": "my-webpack-project",
  "version": "1.0.0",
  "description": "My webpack project",
  "main": "index.ts",
  "scripts": {
    "fix": "npm run lint:fix && npm run stylelint && npm run format",
    "format": "prettier -luw .",
    "ci:format": "prettier -cu",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "stylelint": "stylelint --mw 0 --fix \"src/**/*.css\"",
    "prepare": "husky",
    "build": "tsx node_modules/webpack/bin/webpack --mode=production --env mode=production",
    "build:dev": "tsx node_modules/webpack/bin/webpack --mode=development",
    "watch": "tsx node_modules/webpack/bin/webpack --watch",
    "serve": "tsx node_modules/webpack/bin/webpack serve"
  },
  "author": "Anastasiia Muzipova",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@webpack-cli/generators": "^3.0.7",
    "autoprefixer": "^10.4.19",
    "css-loader": "^6.9.1",
    "esbuild-loader": "^4.1.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.25.2",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mini-css-extract-plugin": "^2.8.1",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "style-loader": "^3.3.4",
    "stylelint": "^16.3.1",
    "stylelint-config-clean-order": "^5.4.2",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.4.3",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "tsx": "^4.7.2",
    "typescript": "^5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "zod": "^3.22.4"
  }
}
